<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GraphicEditor.ViewModels"
        xmlns:svg="clr-namespace:Avalonia.Svg;assembly=Avalonia.Svg.Skia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1600" d:DesignHeight="900"
        Height="900" Width="1600"
        x:Class="GraphicEditor.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GraphicEditor">

    <Grid Background="#EBEBEB">
        <!-- две колонки: центральная область (левая) и правая панель (фиксированной ширины) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- меню -->
                <RowDefinition Height="Auto"/> <!-- кнопки и ползунки -->
                <RowDefinition Height="*"/>    <!-- центральная область -->
                <RowDefinition Height="Auto"/>  
            </Grid.RowDefinitions>

            <!-- верх меню -->
            <DockPanel Grid.Row="0" LastChildFill="True" Background="#D9D9D9">
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="Файл">
                        <MenuItem Header="Новый"/>
                        <MenuItem Header="Открыть"/>
                        <MenuItem Header="Сохранить"/>
                    </MenuItem>
                    <MenuItem Header="Изменить"/>
                    <MenuItem Header="Вид"/>
                </Menu>
            </DockPanel>

            <!-- (2) КНОПКИ + ПОЛЗУНКИ -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="12"
                        Margin="8,4">
                
                <!-- группа с тремя кнопками -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button>
                        <ContentControl>
                            <Image Source="{SvgImage /Assets/pajamas_go-back.svg}"/>
                        </ContentControl>
                    </Button>
                    <Button>
                        <ContentControl>
                            <Image Source="{SvgImage /Assets/pajamas_go-back-2.svg}"/>
                        </ContentControl>
                    </Button>
                    <Button>
                        <ContentControl>
                            <Image Source="{SvgImage /Assets/Save.svg}"/>
                        </ContentControl>
                    </Button>
                </StackPanel>

                <!-- небольшой отступ между кнопками и ползунками -->
                <StackPanel Width="20"/>

                
                <!-- ползунки с подписями -->
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <!-- Подписи слайдеров -->
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Прозрачность" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding SelectedShapeWidth, StringFormat='{}{0:0}'}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Slider x:Name="slider" Width="120" Minimum="0" Maximum="100" Value="{Binding SelectedShapeWidth, Mode=TwoWay}" />

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Толщина" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding SelectedShapeHeight, StringFormat='{}{0:0}'}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Slider x:Name="slider2" Width="120" Minimum="0" Maximum="100" Value="{Binding SelectedShapeHeight, Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>

            <!-- основная область: левый блок (инструменты) + центр (холст) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- левый столбец с вертикальным списком инструментов -->
                <StackPanel Grid.Column="0"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="11"
                            Spacing="10">
                    <Button>
                        <Image Source="{SvgImage /Assets/mdi_pen.svg}" Stretch="None"/>
                    </Button>
                    <Button><Image Source="{SvgImage /Assets/solar_eraser-bold.svg}" Stretch="None"/></Button>
                    <Button><Image Source="{SvgImage /Assets/solar_text-bold.svg}" Stretch="None"/></Button>
                    <Button><Image Source="{SvgImage /Assets/ic_baseline-highlight-alt.svg}" Stretch="None"/></Button>
                    <Button><Image Source="{SvgImage /Assets/fluent_lasso-20-filled.svg}" Stretch="None"/></Button>
                </StackPanel>
            </Grid>

        </Grid>

        <!-- правая панель -->
        <Border Grid.Column="1" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- (1) поворот/отражение -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- (2) список фигур -->
                    <RowDefinition Height="Auto"/>
                    <!-- (3) фигуры -->
                    <RowDefinition Height="*"/>
                    <!-- (4) панель выбора цвета -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- (1) поворот и отражение -->
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="8" Spacing="4">
                    <TextBlock Text="Поворот:" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button><Image Source="{SvgImage /Assets/Rotate Right.svg}" Stretch="None"/></Button>
                        <Button><Image Source="{SvgImage /Assets/Rotate Right-2.svg}" Stretch="None"/></Button>
                        <Button><Image Source="{SvgImage /Assets/Replace.svg}" Stretch="None"/></Button>
                    </StackPanel>

                    <TextBlock Text="Отражение:" Margin="0,8,0,0" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button><Image Source="{SvgImage /Assets/material-symbols_flip.svg}" Stretch="None"/></Button>
                        <Button><Image Source="{SvgImage /Assets/material-symbols_flip-2.svg}" Stretch="None"/></Button>
                    </StackPanel>
                </StackPanel>

                <!-- (2) список фигур -->
                <Border Grid.Row="1" Height="100">
                  <ScrollViewer>
                    <ListBox ItemsSource="{Binding ReadonlyFigureNames}" />
                  </ScrollViewer>
                </Border>

                <GridSplitter Grid.Row="2" ResizeDirection="Rows"/>

                <!-- (3) фигуры -->
                <StackPanel Grid.Row="3" Orientation="Vertical" Margin="8" Spacing="8">
                    <TextBlock Text="Фигуры" FontWeight="Bold"/>
                    <ItemsControl ItemsSource="{Binding FigureFactories}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="2" Content="{Binding FigureType, StringFormat='Create {0}'}" Command="{Binding CreateAndAdd}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- <WrapPanel>
                        <Button Content="○" Margin="4"/>
                        <Button Content="△" Margin="4"/>
                        <Button Content="—" Margin="4"/>
                        <Button Content="★" Margin="4"/>
                        <Button Content="■" Margin="4"/>
                        <Button Content="♥️" Margin="4"/>
                        <Button Content="☁️" Margin="4"/>
                    </WrapPanel> -->
                </StackPanel>

                <!-- (4) цвет -->
                <StackPanel Grid.Row="5" Margin="8" Spacing="8">
                <!-- Мини-табличка свойств -->
                <TextBlock Text="Свойства фигуры" FontWeight="Bold"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="ShapeName" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Color:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Spacing="5">
                        <TextBox x:Name="RedValue" Width="50" Watermark="R"/>
                        <TextBox x:Name="GreenValue" Width="50" Watermark="G"/>
                        <TextBox x:Name="BlueValue" Width="50" Watermark="B"/>
                    </StackPanel>

                    <TextBlock Text="Center X:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="CenterX" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Center Y:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="CenterY" Grid.Row="3" Grid.Column="1"/>
                    
                    <TextBlock Text="Radius:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="Radius" Grid.Row="4" Grid.Column="1"/>

                    <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2" Spacing="10" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Увеличить" x:Name="ScaleUpButton" Width="90" Height="30"/>
                        <Button Content="Уменьшить" x:Name="ScaleDownButton" Width="100" Height="30"/>
                        <Button Content="Удалить" x:Name="RemoveButton" Width="80" Height="30"/>
                    </StackPanel>
                </Grid>
                </StackPanel>

            </Grid>
        </Border>

        <!-- Центральная область для холста -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="11"
                        Spacing="10">
            </StackPanel>

            <Canvas x:Name="MainCanvas"
                    Grid.Column="1"
                    Background="pink"
                    Width="1000"  
                    Height="600" 
                    PointerPressed="Canvas_PointerPressed"
            />  
        </Grid>
    </Grid>
</Window>