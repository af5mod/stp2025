<Window
    x:Class="GraphicEditor.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:m="using:GraphicEditor.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="clr-namespace:Avalonia.Svg;assembly=Avalonia.Svg.Skia"
    xmlns:vm="using:GraphicEditor.ViewModels"
    Title="GraphicEditor"
    Width="1600"
    Height="900"
    d:DesignHeight="900"
    d:DesignWidth="1600"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <!-- <Window.DataTemplates>
        <DataTemplate DataType="vm:FigureViewModel">

        </DataTemplate>
    </Window.DataTemplates>-->



    <Grid Background="#EBEBEB">
        <!--  две колонки: центральная область (левая) и правая панель (фиксированной ширины)  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="500" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  меню  -->
                <RowDefinition Height="Auto" />
                <!--  кнопки и ползунки  -->
                <RowDefinition Height="*" />
                <!--  центральная область  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  верх меню  -->
            <DockPanel Grid.Row="0" Background="#D9D9D9" LastChildFill="True">
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="Файл">
                        <MenuItem Header="Новый" />
                        <MenuItem Header="Открыть" />
                        <MenuItem Header="Сохранить" />
                    </MenuItem>
                    <MenuItem Header="Изменить" />
                    <MenuItem Header="Вид" />
                </Menu>
            </DockPanel>

            <!--  (2) КНОПКИ + ПОЛЗУНКИ  -->
            <StackPanel
                Grid.Row="1"
                Margin="8,4"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="12">

                <!--  группа с тремя кнопками  -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button>
                        <ContentControl>
                            <Image Source="{SvgImage /Assets/pajamas_go-back.svg}" />
                        </ContentControl>
                    </Button>
                    <Button>
                        <ContentControl>
                            <Image Source="{SvgImage /Assets/pajamas_go-back-2.svg}" />
                        </ContentControl>
                    </Button>
                    <Button>
                        <ContentControl>
                            <Image Source="{SvgImage /Assets/Save.svg}" />
                        </ContentControl>
                    </Button>
                </StackPanel>

                <!--  небольшой отступ между кнопками и ползунками  -->
                <StackPanel Width="20" />


                <!--  ползунки с подписями  -->
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <!--  Подписи слайдеров  -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center" Text="Прозрачность" />
                        <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedShapeWidth, StringFormat='{}{0:0}'}" />
                    </StackPanel>

                    <Slider
                        x:Name="slider"
                        Width="120"
                        Maximum="100"
                        Minimum="0"
                        Value="{Binding SelectedShapeWidth, Mode=TwoWay}" />

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center" Text="Толщина" />
                        <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedShapeHeight, StringFormat='{}{0:0}'}" />
                    </StackPanel>
                    <Slider
                        x:Name="slider2"
                        Width="120"
                        Maximum="100"
                        Minimum="0"
                        Value="{Binding SelectedShapeHeight, Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>

            <!--  основная область: левый блок (инструменты) + центр (холст)  -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  левый столбец с вертикальным списком инструментов  -->
                <StackPanel
                    Grid.Column="0"
                    Margin="11"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Vertical"
                    Spacing="10">
                    <Button>
                        <Image Source="{SvgImage /Assets/mdi_pen.svg}" Stretch="None" />
                    </Button>
                    <Button>
                        <Image Source="{SvgImage /Assets/solar_eraser-bold.svg}" Stretch="None" />
                    </Button>
                    <Button>
                        <Image Source="{SvgImage /Assets/solar_text-bold.svg}" Stretch="None" />
                    </Button>
                    <Button>
                        <Image Source="{SvgImage /Assets/ic_baseline-highlight-alt.svg}" Stretch="None" />
                    </Button>
                    <Button>
                        <Image Source="{SvgImage /Assets/fluent_lasso-20-filled.svg}" Stretch="None" />
                    </Button>
                </StackPanel>
            </Grid>

        </Grid>

        <!--  правая панель  -->
        <Border Grid.Column="1" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <!--  (1) поворот/отражение  -->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <!--  (2) список фигур  -->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <!--  (3) фигуры  -->
                    <RowDefinition Height="Auto" />
                    <!--  (4) панель выбора цвета  -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  (1) поворот и отражение  -->
                <StackPanel Grid.Row="0" Margin="8" Orientation="Vertical" Spacing="4">
                    <TextBlock FontWeight="Bold" Text="Поворот:" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button>
                            <Image Source="{SvgImage /Assets/Rotate Right.svg}" Stretch="None" />
                        </Button>
                        <Button>
                            <Image Source="{SvgImage /Assets/Rotate Right-2.svg}" Stretch="None" />
                        </Button>
                        <Button>
                            <Image Source="{SvgImage /Assets/Replace.svg}" Stretch="None" />
                        </Button>
                    </StackPanel>

                    <TextBlock Margin="0,8,0,0" FontWeight="Bold" Text="Отражение:" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button>
                            <Image Source="{SvgImage /Assets/material-symbols_flip.svg}" Stretch="None" />
                        </Button>
                        <Button>
                            <Image Source="{SvgImage /Assets/material-symbols_flip-2.svg}" Stretch="None" />
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!--  (2) список фигур  -->
                <Border Grid.Row="5">
                    <ScrollViewer>
                        <ListBox x:Name="list" ItemsSource="{Binding ReadonlyFigures}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Figure.Name}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>

                <GridSplitter Grid.Row="4" ResizeDirection="Rows" />

                <!--  (3) фигуры  -->
                <TextBlock Grid.Row="1" Margin="8" FontWeight="Bold" Text="Фигуры" />
                <StackPanel Grid.Row="2" Margin="8" Orientation="Horizontal" Spacing="8">
                    <ItemsControl ItemsSource="{Binding FigureFactories}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Width="75" Height="75" Margin="2" Command="{Binding CreateFigureCommand}">
                                    <Svg Css=".Black { fill: #FF0000; }" Path="{Binding IconPath}" Stretch="None" />
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <ContentControl Grid.Row="3" Grid.Column="0" Margin="2" Content="{Binding #list.SelectedItem}">
                    <ContentControl.DataTemplates>
                        <DataTemplate x:DataType="vm:FigureViewModel">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Name:" />
                                <TextBox x:Name="ShapeName" Grid.Row="0" Grid.Column="1" Text="{Binding Figure.Name}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Color:" />
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                    <ColorPicker />
                                </StackPanel>

                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Center X:" />
                                <TextBox x:Name="CenterX" Grid.Row="2" Grid.Column="1" Text="{Binding CenterX}" />

                                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Center Y:" />
                                <TextBox x:Name="CenterY" Grid.Row="3" Grid.Column="1" Text="{Binding CenterY}" />

                                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Radius:" />
                                <TextBox x:Name="Radius" Grid.Row="4" Grid.Column="1" />

                                <StackPanel
                                    Grid.Row="5"
                                    Grid.ColumnSpan="2"
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="10">
                                    <Button x:Name="ScaleUpButton" Width="90" Height="30" Content="Увеличить" />
                                    <Button x:Name="ScaleDownButton" Width="100" Height="30" Content="Уменьшить" />
                                    <Button x:Name="RemoveButton" Width="80" Height="30" Content="Удалить" />
                                </StackPanel>
                                <ContentControl Grid.Row="6" Grid.ColumnSpan="2" Content="{Binding Figure}" />
                            </Grid>
                        </DataTemplate>

                        <DataTemplate x:DataType="m:Circle">
                            <Grid ColumnDefinitions="Auto, Auto" RowDefinitions="Auto, Auto">

                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="PointOnCircle X:" />
                                <TextBox x:Name="PointOnCircleX" Grid.Row="0" Grid.Column="1" Text="{Binding PointOnCircleX, Mode=TwoWay}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="PointOnCircle Y:" />
                                <TextBox x:Name="PointOnCircleY" Grid.Row="1" Grid.Column="1" Text="{Binding PointOnCircleY, Mode=TwoWay}" />
                            </Grid>
                        </DataTemplate>
                    </ContentControl.DataTemplates>
                </ContentControl>

            </Grid>
        </Border>

        <!--  Центральная область для холста  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--
            <StackPanel
                Grid.Column="0"
                Margin="11"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Vertical"
                Spacing="10" />-->

            <Viewbox Grid.Column="1" Stretch="Uniform">
                <ItemsControl Width="1000" Height="600" ItemsSource="{Binding ReadonlyFigures}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:FigureViewModel">
                            <Path Data="{Binding Figure.DrawingGeometry}" Stroke="Black" StrokeThickness="1">
                                <Path.Fill>
                                    <SolidColorBrush Color="Red" />
                                </Path.Fill>
                            </Path>
                            <!-- <Canvas
                            x:Name="MainCanvas"
                            Width="1000"
                            Height="600"
                            Background="pink"
                            PointerPressed="Canvas_PointerPressed" />-->
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Background="White" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                </ItemsControl>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
